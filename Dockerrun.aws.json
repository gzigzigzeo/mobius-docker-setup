{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "host": { "sourcePath": "/var/app/current/bitcoin" },
      "name": "bitcoin-data"
    },
    {
      "host": { "sourcePath": "/var/app/current/stellar-core" },
      "name": "stellar-core-data"
    },
    {
      "host": { "sourcePath": "/var/app/current/log/stellar-core" },
      "name": "stellar-core-log"
    }
  ],
  "containerDefinitions": [
    {
      "name": "bitcoin",
      "image": "nebolsin/bitcoin-rpc",
      "memory": 1024,
      "essential": true,
      "mountPoints": [
        {
          "containerPath": "/home/bitcoin/.bitcoin",
          "sourceVolume": "bitcoin-data"
        }
      ],
      "portMappings": [
        {
          "containerPort": 8332,
          "hostPort": 8332
        },
        {
          "containerPort": 8333,
          "hostPort": 8333
        }
      ]
    }
  ]
}
